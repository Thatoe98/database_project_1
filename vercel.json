{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/donors",
      "dest": "/donors.html"
    },
    {
      "src": "/donations",
      "dest": "/donations.html"
    },
    {
      "src": "/inventory",
      "dest": "/inventory.html"
    },
    {
      "src": "/hospitals",
      "dest": "/hospitals.html"
    },
    {
      "src": "/campaigns",
      "dest": "/campaigns.html"
    },
    {
      "src": "/patients",
      "dest": "/patients.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
